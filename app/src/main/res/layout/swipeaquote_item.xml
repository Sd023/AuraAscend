<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/swipeAQuoteCardView"
        android:layout_width="0dp"
        android:layout_height="340dp"
        android:layout_margin="30dp"
        android:elevation="20dp"
        app:cardBackgroundColor="@color/WhiteSmoke"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/Olive"
        app:strokeWidth="1dp">

        <TextView
            android:id="@+id/quoteText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/manrope_regular"
            android:gravity="center"
            android:maxLines="10"
            android:padding="10dp"
            android:textSize="18sp"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/swipeAQuoteCardView"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="32dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/swipeAQuoteCardView">

        <ImageView
            android:id="@+id/bookmark"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="64dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/bookmark"
            android:focusable="true"
            android:src="@drawable/ic_bookmark_outline" />

        <ImageView
            android:id="@+id/like"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="64dp"
            android:clickable="true"
            android:contentDescription="@string/like"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_like_outline" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
