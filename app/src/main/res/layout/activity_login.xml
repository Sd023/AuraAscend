<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.login.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:layout_marginTop="40dp"
            android:padding="40dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/loginView"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#EEF0EC"
            app:cardCornerRadius="8dp"
            android:onClick="expand"
            android:layout_below="@id/logo"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/loginLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    style="@style/ManropeRegular"
                    android:textSize="22sp"
                    android:padding="10dp"
                    android:layout_marginStart="10dp"/>
                <LinearLayout
                    android:id="@+id/expandableContentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true"
                    android:visibility="gone"
                    android:layout_below="@+id/loginLayout"
                    android:padding="10dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inEmail"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:hint="@string/email"
                        app:hintTextColor="@color/Olive"
                        android:padding="5dp"
                        app:boxStrokeColor="@color/Olive"
                        app:endIconMode="clear_text"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textEmailAddress"
                            android:padding="5dp"
                            android:textSize="16sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inPassword"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:hint="@string/password"
                        app:boxStrokeColor="@color/Olive"
                        app:hintTextColor="@color/Olive"
                        app:passwordToggleEnabled="true"
                        android:padding="5dp"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPassword"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textPassword"
                            android:padding="5dp"
                            android:textSize="16sp"/>
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/loginBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Login"
                        android:textColor="@color/White"
                        android:textSize="18sp"
                        style="@style/CustomButtonStyle"
                        android:backgroundTint="@color/GoogleSign"
                        android:padding="15dp"
                        />


                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/continueAsGuestLayout"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="8dp"
            android:backgroundTint="#EEF0EC"
            android:layout_below="@+id/loginView"
            app:cardElevation="8dp">

            <TextView
                android:id="@+id/guestBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/continue_as_guest"
                style="@style/ManropeRegular"
                android:textSize="22sp"
                android:padding="10dp"
                android:layout_marginStart="10dp"/>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/viewLa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/continueAsGuestLayout"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:background="@color/black"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Or"
                android:gravity="center"
                android:layout_weight="0.5"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:background="@color/black"/>
        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            style="@style/CustomButtonStyle"
            android:id="@+id/gSignIn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/sign_in_with_google"
            android:layout_below="@id/viewLa"
            android:textColor="@color/white"
            app:icon="@drawable/gsign"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            app:iconGravity="textStart"
            app:iconTint="@null" />

        <TextView
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gSignIn"
            android:text="@string/not_registered_sign_up_now"
            android:layout_centerHorizontal="true"
            style="@style/ManropeRegular"
            android:gravity="center"
            android:layout_margin="40dp"
            android:textSize="16sp"
            android:textStyle="bold"
            />
    </RelativeLayout>

</ScrollView>
