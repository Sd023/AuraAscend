<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AuraAscend" parent="Base.Theme.AuraAscend" >
        <item name="colorPrimary">@color/Beige</item>
        <item name="colorOnPrimary">@color/Beige</item>
        <item name="colorPrimaryContainer">@color/Beige</item>
        <item name="colorOnPrimaryContainer">@color/Beige</item>

    </style>

    <style name="CustomMaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/cardColor</item>
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="strokeWidth">2dp</item>
    </style>


    <style name="CustomGoodTimesCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/cardGoodTimesColor</item>
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>


    <style name="CustomNeutralCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/cardNeutralTimesColor</item>
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>


    <style name="CustomRoughTimesCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/cardRoughTimesColor</item>
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>

    <style name="Base.Theme.AuraAscend" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/Beige</item>
        <item name="colorOnPrimary">@color/Beige</item>
        <item name="colorPrimaryContainer">@color/Beige</item>
        <item name="colorOnPrimaryContainer">@color/Beige</item>
    </style>


    <style name="Theme.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowSplashScreenBackground">@color/black</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/black</item>
    </style>
    <style name="high_score_text">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#BFEB1719</item>
    </style>

    <style name="CustomAlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:background">@color/WhiteSmoke</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:textColor">@color/Olive</item>
        <item name="fontFamily">@font/manrope_regular</item>
    </style>

    <style name="text_bg">
        <item name="android:textSize">200sp</item>
        <item name="android:textColor">@color/colorForIconTint</item>
    </style>
</resources>